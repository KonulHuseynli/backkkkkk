@using Web.Areas.Admin.ViewModels.HighJewellerMain
@model HighJewellerMainIndexVM

<a class="btn btn-primary" asp-action="create" asp-controller="highjewellermain">Create</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">CreateAt</th>
            <th scope="col">ModifiedAt</th>
            <th scope="col">Photo</th>
            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var jeweller in Model.HighJewellerMains)
        {
            <tr>
                <td>@jeweller.Id</td>
                <td>@jeweller.Title</td>

                <td>@Html.Raw(jeweller.Description)</td>
                <td>@jeweller.CreatedAt.ToShortDateString()</td>
                <td>@jeweller.ModifiedAt.ToShortDateString()</td>
                <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/assets2/images/@jeweller.PhotoName" /></td>

                <td>
                    <a class="btn btn-primary" asp-action="update" asp-controller="highjewellermain" asp-route-id="@jeweller.Id">Update</a>
                    <form method="post" asp-action="delete" asp-controller="highjewellermain" asp-route-id="@jeweller.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>