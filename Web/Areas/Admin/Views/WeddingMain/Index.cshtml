@using Web.Areas.Admin.ViewModels.WeddingMain
@model WeddingMainIndexVM

<a class="btn btn-primary" asp-action="create" asp-controller="weddingmain">Create</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">CreateAt</th>
            <th scope="col">ModifiedAt</th>
            <th scope="col">Photo</th>
            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var weddingMain in Model.WeddingMains)
        {
            <tr>
                <td>@weddingMain.Id</td>
                <td>@weddingMain.Title</td>

                <td>@Html.Raw(weddingMain.Description)</td>
                <td>@weddingMain.CreatedAt.ToShortDateString()</td>
                <td>@weddingMain.ModifiedAt.ToShortDateString()</td>
                <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/assets2/images/@weddingMain.PhotoName" /></td>

                <td>
                    <a class="btn btn-primary" asp-action="update" asp-controller="weddingmain" asp-route-id="@weddingMain.Id">Update</a>
                    <form method="post" asp-action="delete" asp-controller="weddingmain" asp-route-id="@weddingMain.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>